<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">
    <include layout="@layout/layout_header"/>

    <FrameLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilAccount"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/profile10"
                android:background="@drawable/circle_border"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/usernameAccount"
                android:layout_marginTop="90dp"
                android:layout_width="100dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Bookstagram"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold|italic"/>
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/follower"
                android:layout_marginTop="60dp"
                android:layout_marginStart="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Follower"/>


            <TextView
                android:id="@+id/following"
                android:layout_marginTop="60dp"
                android:layout_marginStart="250dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Following"/>

            <TextView
                android:id="@+id/sumfollower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:textColor="@color/black"
                android:layout_marginStart="163dp"
                android:text="200"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginStart="255dp">
            <TextView
                android:id="@+id/sumfolowing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="100"/>
        </FrameLayout>
        <TextView
            android:layout_marginTop="250dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Postingan"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="290dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/postinganAccount"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:src="@drawable/igbook13"/>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

</LinearLayout>